  "editor.occurrencesHighlight": "singleFile", //Выделение ключа курсором
  "editor.bracketPairColorization.enabled": true, //Подсветка парных скобок
  "editor.autoClosingBrackets": "always", // Автооткрытие конструктора при двойной точке с запятой
  "editor.autoClosingQuotes": "always", // Завершать скобки автоматически
  "editor.hover.enabled": true, // Включить всплывающие подсказки при наведении
  "editor.parameterHints.enabled": true, // Показывать подсказки параметров функций
  "editor.quickSuggestionsDelay": 2000, //Время появления подсказок при наборе в мс
  "editor.hover.delay": 2000, //Время появления подсказок при наведении в мс
  "editor.tabCompletion": "on", //Позволяет дополнять слова нажатием Tab для удобства.
  "editor.quickSuggestions": { "other": "on" }, // Показывать подсказки сразу при вводе
  "editor.suggest.showMethods": true, // Показывать автодополнение с методами
  "editor.suggest.showClasses": true, // Показывать подсказки по классам
  "editor.suggest.showKeywords": true, // Показывать подсказки по ключевым словам
  "editor.suggest.showConstants": true, // Показывать подсказки по константам
  "editor.suggest.showConstructors": true, // Показывать подсказки по конструкторам
  "editor.suggest.showEnums": true, // Показывать подсказки по перечислениям
  "editor.suggest.showEnumMembers": true, // Показывать подсказки по членам перечислений
  "editor.suggest.showEvents": true, // Показывать подсказки по событиям
  "editor.suggest.showFields": true, // Показывать подсказки по полям
  "editor.suggest.showFiles": true, // Показывать подсказки по файлам
  "editor.suggest.showFunctions": true, // Показывать подсказки по функциям
  "editor.suggest.showInterfaces": true, // Показывать подсказки по интерфейсам
  "editor.suggest.showIssues": true, // Показывать подсказки по проблемам
  "editor.suggest.showOperators": true, // Показывать подсказки по операторам
  "editor.suggest.showStructs": true, // Показывать подсказки по структурам
  "editor.suggest.showUnits": true, // Показывать подсказки по единицам измерения
  "editor.suggest.showValues": true, // Показывать подсказки по значениям
  "editor.suggest.showVariables": true, // Показывать подсказки по переменным
  "terminal.integrated.shell.linux": "/usr/bin/fish", // Устанавливаем шелл по умолчанию
  "terminal.integrated.shellArgs.linux": ["--login", "--debug-level 3"], //передаваемые в терминал документы
  "terminal.integrated.cursorStyle": "line", // Стиль строки курсора терминала
  "terminal.integrated.cursorBlinking": true, // Курсор терминала мигает
  "terminal.integrated.copyOnSelection": true, // Копировать выделенный текст в терминал автоматически
  "terminal.integrated.fontFamily": "Hack",
  "git.enabled": true, // Встроенная интеграция git
  "git.autofetch": true, // Включить миграцию проектов в автономный режим
  "git.path": "/usr/bin/git", // Конкретный путь к git-executable
  "extensions.autoUpdate": true, // Периодически проверять обновления для установленных расширений
  "npm.packageManager": "npm", // Пакетник для npm
  // "editor.smoothScrolling": true, // Плавная прокрутка в редакторе
  // "editor.cursorSmoothCaretAnimation": "on", // Включить плавную анимацию курсора
  "workbench.colorTheme": "Owlet (Slate)", // Тема оформления
}
